<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]@(string.IsNullOrWhiteSpace(ViewData["Title"]?.ToString()) ? "" : " | ") Georgia EPD Enforcement Orders</title>
    <partial name="_FaviconPartial" />
    <link rel="stylesheet" href="~/lib/uswds/css/uswds.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
    <partial name="_RaygunScriptsPartial" />
</head>
<body>
<environment exclude="Production">
    <div class="banner-test-site">
        Test Site
    </div>
</environment>

<a class="usa-skipnav" href="#main-content">Skip to main content</a>

@if (DateTime.Now < new DateTime(2024, 12, 9, 6, 0, 0, DateTimeKind.Local))
{
    <div class="usa-grid usa-section banner">
        <h3>Planned Maintenance Outage</h3>
        <p>There will be a scheduled major system maintenance outage for all EPD applications from
            11 AM Saturday, 12/7/2024 until 6 AM Monday, 12/9/2024.</p>
    </div>
}

<partial name="_MenuPartial"/>

<main class="usa-grid usa-section usa-content usa-layout-docs" id="main-content">
    @RenderBody()
</main>

<div class="usa-footer usa-footer-medium" role="contentinfo">
    <div class="usa-grid usa-footer-return-to-top">
        <a href="#">Return to top</a>
    </div>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/uswds/js/uswds.min.js"></script>
<script src="~/js/closeAlert.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
