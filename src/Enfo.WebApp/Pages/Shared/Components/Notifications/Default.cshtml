@model List<Enfo.WebApp.Platform.OrgNotifications.OrgNotification>

@if (Model.Any())
{
    <div class="usa-grid usa-section banner">
        @if (Model.Count == 1)
        {
            <h3>Notice</h3>
            <p>@Model[0].Message</p>
        }
        else
        {
            <h3>Notifications</h3>
            <ul>
                @foreach (var notification in Model)
                {
                    <li><p>@notification.Message</p></li>
                }
            </ul>
        }
        <p>Please refer to the <a href="https://status.gaepd.org/">EPD-IT status page</a> for updates.</p>
    </div>
}
