@model ICollection<Enfo.Domain.EnforcementOrders.Resources.AttachmentView>

@if (Model.Count == 0)
{
    <em>None</em>
}
else
{
    <ul class="gaepd-file-links">
        @foreach (var item in Model)
        {
            <li>
                <a asp-page="/Attachment" asp-route-id="@item.Id" asp-route-fileName="@item.FileName" class="gaepd-file-link" target="_blank">
                    @Html.DisplayFor(m => item.FileExtension)
                    @item.FileName
                </a>
                (@Html.DisplayFor(m => item.Size))
            </li>
        }
    </ul>
}