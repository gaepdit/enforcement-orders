{
    // Use IntelliSense to find out which attributes exist for C# debugging
    // Use hover for the description of the existing attributes
    // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
    "version": "0.2.0",
    "configurations": [
         {
             "name": "API",
             "type": "coreclr",
             "request": "launch",
             "preLaunchTask": "build-api",
             // If you have changed target frameworks, make sure to update the program path.
             "program": "${workspaceFolder}/Enfo.API/bin/Debug/netcoreapp2.2/Enfo.API.dll",
             "args": [],
             "cwd": "${workspaceFolder}/Enfo.API",
             "stopAtEntry": false,
             "launchBrowser": {
                 "enabled": true
             },
             "env": {
                 "ASPNETCORE_ENVIRONMENT": "Development",
                 "ASPNETCORE_URLS": "https://localhost:4001;http://localhost:4000"
             },
             "sourceFileMap": {
                 "/Views": "${workspaceFolder}/Views"
             }
         },
         {
             "name": "UI",
             "type": "coreclr",
             "request": "launch",
             "preLaunchTask": "build-ui",
             // If you have changed target frameworks, make sure to update the program path.
             "program": "${workspaceFolder}/Enfo.UI/bin/Debug/netcoreapp2.2/Enfo.UI.dll",
             "args": [],
             "cwd": "${workspaceFolder}/Enfo.UI",
             "stopAtEntry": false,
             "launchBrowser": {
                 "enabled": true
             },
             "env": {
                 "ASPNETCORE_ENVIRONMENT": "Development",
                 "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
             },
             "sourceFileMap": {
                 "/Views": "${workspaceFolder}/Views"
             }
         }
     ],
     "compounds": [
         {
             "name": "API + UI",
             "configurations": ["API", "UI"]
         }
     ]
 }